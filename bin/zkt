#!/usr/bin/env bash

cd $(dirname $0)

if which zkup >/dev/null; then
    cargo uninstall zkstack
    git config --local core.hooksPath ||
    git config --local core.hooksPath ./.githooks
    zkup -p .. --alias
else
    echo zkup is not installed, please install it https://github.com/matter-labs/zksync-era/tree/main/zkstack_cli/zkup
    cd ../zkstack_cli
    cargo install --path ./crates/zkstack --force
fi
