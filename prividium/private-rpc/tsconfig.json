{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "es2022"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
